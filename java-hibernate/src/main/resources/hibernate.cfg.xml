<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/learn</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password"></property>
        <!-- use env vars -->

        <property name="connection.pool_size">5</property>

            <property name="show_sql">true</property>  
            <property name="format_sql">true</property> 
            <property name="highlight_sql">true</property> 
            
            <property name="hbm2ddl.auto">none</property>
            <!-- validate in real-life -->

        <mapping class="com.arya.entity.Department"/>
        <mapping class="com.arya.entity.Employee"/>
    </session-factory>
</hibernate-configuration>